<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingHorizontal="20dp"
    android:background="@color/grey">

    <androidx.cardview.widget.CardView
        android:id="@+id/crdCambiar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp" />

    <Button
        android:id="@+id/btnAzul"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/azul"
        app:layout_constraintTop_toBottomOf="@id/crdCambiar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnMorado"
        app:layout_constraintBottom_toTopOf="@id/btnAmarillo"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btnMorado"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/morado"
        app:layout_constraintStart_toEndOf="@id/btnAzul"
        app:layout_constraintTop_toBottomOf="@id/crdCambiar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnRosa"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnAmarillo"
        android:backgroundTint="@color/amarillo"
        android:layout_width="160dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/btnAzul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnRosa"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnRosa"
        android:backgroundTint="@color/rosa"
        android:layout_width="160dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toEndOf="@id/btnAmarillo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMorado"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btnEjercicio2"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:text="@string/ex2"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnEjercicio3"/>

    <Button
        android:id="@+id/btnEjercicio3"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:text="@string/ex3"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/btnEjercicio2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>